{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "bin/**"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "cmd/**",
        "*.go",
        "go.mod",
        "go.sum",
        "package.json"
      ],
      "env": [
        "GOOS",
        "GOARCH",
        "CGO_ENABLED",
        ".env*"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "download": {
      "inputs": ["go.mod", "go.sum"],
      "cache": false
    },
    "mod": {
      "inputs": ["go.mod"],
      "outputs": ["go.sum"],
      "cache": true
    }
  }
}
